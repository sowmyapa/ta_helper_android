<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@drawable/bg_3">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/addAssignmentsFragmentTextView"
        android:textSize="25dp"
        android:gravity="center"
        android:hint="Enter Assignment Name"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/addAssignmentFragmentSplitName"
            android:hint="Split Name"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:id="@+id/addAssignmentFragmentSplitScore"
            android:hint="Split Score"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/addAssignmentsFragmentButton"
            android:text="Add Split"
            android:textSize="15dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:alpha="0.60"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/addAssignmentFragmentTotal"
            android:text="Total : "
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:id="@+id/addAssignmentFragmentTotalScore"
            android:inputType="number"
            android:hint="Total Score"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"

            />
    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/addAssignmentsFragmentListView"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/addAssignmentsFragmentAddButton"
        android:text=" Add Sub Module "
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:alpha="0.60"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Split List"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:alpha="0.80"
        android:textColor="@color/colorWhite"
        />-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/addAssignmentsFragmentBackButton"
        android:text=" BACK TO SUB MODULE LIST "
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:alpha="0.60"
        android:textColor="@color/colorWhite"
        android:layout_gravity="bottom"


        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>