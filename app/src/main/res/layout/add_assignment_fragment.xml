<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/colorBlack"
    android:alpha="0.8">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/addAssignmentsFragmentTextView"
        android:textSize="25dp"
        android:gravity="center"
        android:hint="Enter Assignment Name"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/addAssignmentFragmentSplitName"
            android:hint="Split Name"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="number"
            android:id="@+id/addAssignmentFragmentSplitScore"
            android:hint="Split Score"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            />



    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/addAssignmentsFragmentButton"
        android:text="Add Split"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@color/colorMaroon"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/addAssignmentFragmentTotal"
            android:text="Total : "
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="right"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/addAssignmentFragmentTotalScore"
            android:inputType="number"
            android:hint="Total Score"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <View android:id="@+id/separator"
        android:background="@color/colorGrey"
        android:layout_width = "fill_parent"
        android:layout_height="4px"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/addAssignmentsFragmentListView"

        android:dividerHeight="4px"
        android:divider="@color/colorGrey"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/addAssignmentsFragmentAddButton"
        android:text=" Add Sub Module "
        android:textSize="15dp"
        android:gravity="center"
        android:background="@color/colorMaroon"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Split List"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:alpha="0.80"
        android:textColor="@color/colorWhite"
        />-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/addAssignmentsFragmentBackButton"
        android:text=" BACK TO SUB MODULE LIST "
        android:textSize="15dp"
        android:gravity="center"
        android:background="@color/colorMaroon"
        android:textColor="@color/colorWhite"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>