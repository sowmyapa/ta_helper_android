<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/colorBlack"
    android:alpha="0.8"
    android:layout_marginTop="?attr/actionBarSize"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editDeleteAssignmentsFragmentTextView"
        android:textSize="25dp"
        android:gravity="center"
        android:hint="Enter Assignment Name"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/editDeleteAssignmentFragmentTotal"
            android:text="Total"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="right"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/editDeleteAssignmentFragmentTotalScore"
            android:inputType="numberDecimal"
            android:hint="Total Score"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/editDeleteAssignmentFragmentWeightage"
            android:text="Weightage"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="right"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/editDeleteAssignmentFragmentWeightageValue"
            android:inputType="numberDecimal"
            android:hint="Weightage"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <View android:id="@+id/separator1"
        android:background="@color/colorGrey"
        android:layout_width = "fill_parent"
        android:layout_height="4px"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Splits"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="right"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite"
        />


    <View android:id="@+id/separator3"
        android:background="@color/colorGrey"
        android:layout_width = "fill_parent"
        android:layout_height="4px"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>



    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/editDeleteAssignmentFragmentSplitName"
            android:hint="Split Name"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="numberDecimal"
            android:id="@+id/editDeleteAssignmentFragmentSplitScore"
            android:hint="Split Score"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editDeleteAssignmentsFragmentButton"
        android:text="Add Split"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@color/colorMaroon"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>


    <View android:id="@+id/separator2"
        android:background="@color/colorGrey"
        android:layout_width = "fill_parent"
        android:layout_height="4px"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/editDeleteAssignmentsFragmentListView"
        android:dividerHeight="4px"
        android:divider="@color/colorGrey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/editDeleteAssignmentsFragmentEditButton"
            android:text=" Edit "
            android:textSize="15dp"
            android:gravity="center"
            android:background="@color/colorMaroon"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/editDeleteAssignmentsFragmentDeleteButton"
            android:text="Delete"
            android:textSize="15dp"
            android:gravity="center"
            android:background="@color/colorMaroon"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>



    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editDeleteAssignmentsFragmentBackButton"
        android:text=" BACK "
        android:textSize="15dp"
        android:gravity="center"
        android:background="@color/colorMaroon"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />-->



</LinearLayout>