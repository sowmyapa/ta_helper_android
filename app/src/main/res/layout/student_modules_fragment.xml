<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60sp"
    android:paddingLeft="6sp"
    android:paddingRight="6sp"
    android:background="@color/colorBlack"
    android:alpha="0.8"
    android:weightSum="1">

    <TextView
        android:text="Modules: CS 442"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorSilver"
        android:paddingBottom="8sp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"></Space>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="25dp"
        android:weightSum="1"
        >

        <TextView
            android:text="  Total Score:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalScoreInModuleList"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalScoreTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
            android:layout_weight="0.96"
            android:text="0/0  " />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="25dp"
        android:weightSum="1"
        >

        <TextView
            android:text="  Current Percentage:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/percentageTeextView"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
             />

        <TextView
            android:text="0.0%  "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/totalPercentageTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="25dp"
        android:weightSum="1"
        >

        <TextView
            android:text="  Current Grade:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gradeWithSplitsCourseName"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
             />

        <TextView
            android:text="E  "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalGradeTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorSilver"
            android:layout_weight="0.96" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:id="@android:id/list"
        android:divider="#ffffff"
        android:dividerHeight="1dp"
        android:layout_weight="1.18" />

</LinearLayout>