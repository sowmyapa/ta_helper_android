<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Modules: CS 442"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25dp"
        android:background="#cdd6f3"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:layout_weight="0.54">

        <TextView
            android:text="  Total Score:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalScoreInModuleList"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalScoreTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.34" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:layout_weight="0.54">

        <TextView
            android:text="  Percentage:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/percentageTeextView"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.53" />

        <TextView
            android:text="89.75%  "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalPercentageTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.42" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="1"
        android:layout_weight="0.54">

        <TextView
            android:text="  Grade:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gradeWithSplitsCourseName"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.52" />

        <TextView
            android:text="B  "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/totalGradeTextView"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.45" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:id="@android:id/list"/>

</LinearLayout>