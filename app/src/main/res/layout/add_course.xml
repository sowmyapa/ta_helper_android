<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40sp"
    android:background="@color/colorBlack"
    android:alpha="0.8">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000sp"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingLeft="6sp"
            android:paddingRight="6sp">

            <TextView
                android:text="Add Course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/add_course_heading_tv_layout"
                android:textSize="25sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:textAlignment="center" />

            <TextView
                android:text="Course Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_course_heading_tv_layout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/course_name_tv_layout"
                android:textSize="20sp"
                android:backgroundTint="@android:color/holo_red_light"

                android:hint="Name of the Course"

                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <TextView
                android:text="Course ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/student_list_tv_layout"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:layout_below="@+id/course_name_tv_layout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15sp"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/course_id_tv_layout"
                android:textSize="20sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_alignBaseline="@+id/student_list_tv_layout"
                android:layout_alignBottom="@+id/student_list_tv_layout"
                android:layout_alignParentEnd="true"
                android:hint="ID of the Course"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <TextView
                android:text="Professor First Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:layout_below="@+id/course_id_tv_layout"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/course_id_tv_layout"
                android:layout_alignEnd="@+id/textView2"
                android:layout_marginTop="15sp"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/professor_FN_tv_layout"
                android:textSize="20sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentEnd="true"
                android:hint="First Name of  Professor"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <TextView
                android:text="Professor Last Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="20sp"
                android:textColor="@color/colorBrightWhite"
                android:textStyle="normal|bold"
                android:layout_below="@+id/textView7"
                android:layout_toStartOf="@+id/add_course_heading_tv_layout"
                android:layout_marginTop="15sp"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/professor_LN_tv_layout"
                android:backgroundTint="@android:color/holo_red_light"
                android:hint="Last Name of Professor"
                android:layout_alignTop="@+id/textView13"
                android:layout_alignStart="@+id/professor_FN_tv_layout"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <TextView
                android:text="Professor Username:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15sp"
                android:id="@+id/textview90"
                android:textSize="20sp"
                android:textColor="@color/colorBrightWhite"
                android:layout_alignEnd="@+id/textView13"
                android:textStyle="normal|bold"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/professor_UN_tv_layout"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_above="@+id/textView17"
                android:layout_toEndOf="@+id/textview90"
                android:hint="Username of Professor"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <TextView
                android:text="Professor email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview90"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp"
                android:id="@+id/textView17"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:paddingLeft="2sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_below="@+id/professor_UN_tv_layout"
                android:layout_alignStart="@+id/ta_email_tv_layout"
                android:layout_marginTop="11dp"
                android:id="@+id/professor_email_tv_layout"
                android:hint="Email of Professor"
                android:textColor="@color/colorBrightWhite"
                android:textColorHint="#ecc5baba" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:text="TA(s):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorBrightWhite"
                android:layout_marginBottom="17dp"
                android:layout_above="@+id/add_course_btn_layout"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:paddingLeft="2sp" />

                <Button
                    android:text="ADD/REMOVE TA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_ta_btn_layout"
                    android:layout_alignBottom="@+id/ta_email_tv_layout"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@color/colorMaroon"
                    android:textColor="@color/colorBrightWhite" />

            </LinearLayout>



                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/ta_display_lv_layout"
                android:layout_height="100sp"
                android:divider="@null"
                android:dividerHeight="0dp"/>




            <Button
                android:text="Add Course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_course_btn_layout"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/ta_email_tv_layout"
                android:layout_marginBottom="29dp"
                android:layout_weight="0.24"
                android:textColor="@color/colorBrightWhite"
                android:background="@color/colorMaroon" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
