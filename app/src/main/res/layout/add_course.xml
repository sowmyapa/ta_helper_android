<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Add Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Course Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/course_id_tv_layout"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:hint="ID of the Course" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/professor_FN_tv_layout"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:hint="First Name of  Professor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ta_email_tv_layout"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:hint="Email of TA(s)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/course_name_tv_layout"
        android:textSize="20sp"
        android:hint="Name of the Course"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_course_btn_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ta_email_tv_layout"
        android:layout_marginBottom="29dp" />

    <TextView
        android:text="Course ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/course_name_tv_layout"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Professor First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/course_id_tv_layout"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/course_id_tv_layout"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Professor Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="normal|bold"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView7"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:text="Professor Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textview90"
        android:textSize="20sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_alignEnd="@+id/textView13"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TA(s):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/add_course_btn_layout"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Professor email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview90"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView17"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/professor_LN_tv_layout"
        android:hint="Last Name of Professor"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/professor_FN_tv_layout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/professor_UN_tv_layout"
        android:layout_above="@+id/textView17"
        android:layout_toEndOf="@+id/textview90"
        android:hint="Username of Professor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/professor_UN_tv_layout"
        android:layout_alignStart="@+id/ta_email_tv_layout"
        android:layout_marginTop="11dp"
        android:id="@+id/professor_email_tv_layout"
        android:hint="Email of Professor" />

</RelativeLayout>
