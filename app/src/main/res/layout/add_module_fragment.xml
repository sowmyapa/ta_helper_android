        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint=" Enter Module Name "
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/enterModuleNameFragmentView"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" ADD Module"
            android:textSize="20dp"
            android:id="@+id/addModuleButtonFragmentView"
            android:background="@color/colorPrimary"
            android:alpha="0.60"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
      />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" BACK TO MODULE LIST"
            android:textSize="20dp"
            android:id="@+id/addModuleButtonFragmentViewBackButton"
            android:background="@color/colorPrimary"
            android:alpha="0.6"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        />

</LinearLayout>