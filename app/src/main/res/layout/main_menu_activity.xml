<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:paddingLeft="6sp"
        android:paddingRight="6sp"
        android:paddingTop="60sp">

        <TextView
            android:id="@+id/student_list_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:background="@color/colorMaroon"
            android:padding="7dp"
            android:text="Student List"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/generate_groups_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/colorMaroon"
            android:padding="7dp"
            android:text="Generate Students Groups"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/export_records_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/colorMaroon"
            android:padding="7dp"
            android:text="Export Records"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:visibility="invisible" />





        <Button
            android:id="@+id/import_student_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMaroon"
            android:text="Import student list"
            android:textColor="@color/colorBrightWhite"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/import_tool_tip_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Needs an excel file residing in your phone. The excel file should have these columns in the exact order: \na) Student User ID \nb) Student Email \nc)Student Last Name \nd)Student First Name \n\n\n Works only on Marshmallow for now"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16sp"
            android:textStyle="normal|italic"
            android:visibility="invisible" />

        <Button
            android:id="@+id/export_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export"
            android:visibility="invisible" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendBcastBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:backgroundTint="@color/colorMaroon"
        app:elevation="4dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</RelativeLayout>